/* pages/search/search.wxss */
.search{
  width: 80%
}

.search_arr{
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: rpx;
}

.search_arr input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.singleTab{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 125rpx;
}

.tabLabel{
  height: 80%;
  width: 75%;
  display: flex;
  flex-direction: row;
  align-content: center;
}

.tabImage{
  width: 120rpx;
  height: 100%;
  align-content: center;
}

.tabText{
  height: 100%;
  width: 400rpx;
  text-align: center;
}

.tabButton{
  background: none;
  color: #000;
  width: 140rpx;
  height: 80rpx;
}

.tabButton::after{
  border: none;
}

.naviImage{
  width: 100%;
  height: 100%;
}

.white{
  color: white
}