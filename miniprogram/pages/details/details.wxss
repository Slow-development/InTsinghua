/* pages/scenicSpotDetails/scenicSpotDetails.wxss */

page {
  background-color: #d7da161e;
}

.horizon {
  display: flex;
  flex-direction: row;
}

#scenicSpotName {
  float: inherit;
  height: 200rpx;
  position: relative;
  text-indent: 100rpx;
  color: purple;
  font-size: 50rpx;
  line-height: 200rpx;
  width: 550rpx;
  background-color: #d7da1605;
}

#navigator {
  float: inherit;
  height: 200rpx;
  position: relative;
  color: red;
  font-size: 40rpx;
  line-height: 200rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

#textInfo {
  background-color: #d7da1627;
  text-indent: 30rpx;
  width: 670rpx;
  line-height: 55rpx;
  border: 5rpx solid gray;
  padding: 20rpx;
  margin: 15rpx;
}

#navigateIcon {
  width: 50%;
  height: 50%;
}

.naviImage {
  width: 100%;
  height: 100%;
}
